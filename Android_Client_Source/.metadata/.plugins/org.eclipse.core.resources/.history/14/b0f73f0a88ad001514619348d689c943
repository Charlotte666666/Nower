<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:drawable="@color/black2"  android:color="#80858175" />

            <gradient android:angle="90" android:endColor="@color/bg_black" android:startColor="@color/white" />

            <stroke android:width="1dip" android:color="#f5f5f5" />

            <corners android:radius="20dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="#80858175" />

            <gradient android:angle="90" android:endColor="@color/bg_black" android:startColor="@color/white" />

            <stroke android:width="1dip" android:color="#bdbdbd" />

            <corners android:radius="20dp" />
        </shape></item>

</selector><!--
solid设置填充颜色，颜色值以#80开头表示透明
stroke 设置边框宽度，颜色值
corners设置圆角
-->
